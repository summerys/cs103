#include <iostream>
using namespace std;

int main(){
   
   int x;
   cout << "Enter an integer between 0 to 999: " <<endl;
   cin >> x;
   
   while(x<999){
      cout << "1's digit is: " << x % 10 << endl;
      cout << "10's digit is: " << (x / 10) % 10 << endl;
      cout << "100's digit is: " << x / 100 << endl;
      cout << endl;
      cout << "Enter another integer between 0 to 999: ";
      cin >> x;
   }

return 0;
}
